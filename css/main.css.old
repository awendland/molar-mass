body {
    background: rgb(234, 237, 242);
    font-family: sans-serif;
    font-size: 26px/12px;
}
    li {
    list-style: none;
}
    #content {
    max-width: 500px;
    min-width: 320px;
    width: 80%;
    margin: 20px auto;
}
    .card {
    padding: 1.2em;
    -webkit-box-shadow: 0 1px 13px 1px rgba(0, 0, 0, .07);
    box-shadow: 0 1px 13px 1px rgba(0, 0, 0, .07);
    background: #fefefe;
    border-radius: 2px;
    margin-bottom: 20px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}
    input {
    border-radius: 3px;
    border: 1px solid #eaeaea;
    height: 30px;
    width: 80%
    padding: 8px;
    font-size: 25px;
    color: #888;
    outline: none;
}
    input:focus {
    -webkit-box-shadow: 0 0 0 1px #1ABC9C;
    box-shadow: 0 0 0 1px #1ABC9C;
    border-color: #1ABC9C;
    -webkit-transition: -webkit-box-shadow .25s ease, border .25s ease;
    transition: box-shadow .25s ease, border .25s ease;
}
    .button {
    border-radius: 3px;
    height: 48px;
    line-height: 48px;
    width: 12%;
    color: white;
    text-align: center;
    float: right;
    background-color: #1ABC9C;
}
    .wrapper #result {
    text-align: center;
}
    .chart {
    width: 240px;
    margin: 0 auto;
}
    .enchanced-table {
    width: 100%;
    font-size: 1.2em;
}
    .enchanced-table thead th {
    white-space: nowrap;
    border-bottom: 1px solid #ccc;
    color: #888;
}
    .enchanced-table th,
.enchanced-table td {
    padding: .5em 1em;
    text-align: right;
}
    .enchanced-table th:first-child,
.enchanced-table td:first-child {
    text-align: left;
}
    .enchanced-table tbody th,
.enchanced-table td {
    border-bottom: 1px solid #e6e6e6;
}
    .enchanced-table th span {
    display: block;
    opacity: .5;
    font-size: .8em;
}
    .enchanced-table th,
.enchanced-table td {
    display: none;
}
    .enchanced-table th.essential,
.enchanced-table td.essential {
    display: table-cell;
}
    @media screen and (min-width: 500px) {
    .enchanced-table th.optional,
    .enchanced-table td.optional {
    display: table-cell;
    }
}
    @media screen and (min-width: 800px) {
    .enchanced-table th,
    .enchanced-table td {
    display: table-cell;
    }
}
    .table-menu-wrapper {
    position: absolute;
    top: -3em;
    right: 0;
}
    .table-menu {
    position: absolute;
    right: 0;
    left: auto;
    background-color: #fff;
    padding: 10px;
    border: 1px solid #ccc;
    font-size: 1.2em;
    width: 12em;
}
    .table-menu-hidden {
    left: -999em;
    right: auto;
}
    .table-wrapper {
    position: relative;
    margin: 5em 5%;
}